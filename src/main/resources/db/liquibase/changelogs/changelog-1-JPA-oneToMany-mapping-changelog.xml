<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

  <!-- POST table definition -->
  <changeSet id="CL-1-CS-0" author="Priyanjana">
    <createTable tableName="POST">
      <column name="ID" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="POST_PK"/>
      </column>
      <column name="TITLE" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="DESCRIPTION" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <!-- COMMENT table definition -->
  <changeSet id="CL-1-CS-1" author="Priyanjana">
    <createTable tableName="COMMENT">
      <column name="ID" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="COMMENT_PK"/>
      </column>
      <column name="CONTENT" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="POST_ID" type="UUID">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <!-- COMMENT table foreign key definition -->
  <changeSet id="CL-1-CS-2" author="Priyanjana">
    <addForeignKeyConstraint
      constraintName="POST_ID_FK"
      baseTableName="COMMENT"
      baseColumnNames="POST_ID"
      referencedTableName="POST"
      referencedColumnNames="ID"
      onDelete="CASCADE"
      onUpdate="CASCADE"
    />
  </changeSet>
</databaseChangeLog>
